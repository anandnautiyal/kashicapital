		<put-attribute name="header" value=".tile.header" />
		<put-attribute name="footer" value=".tile.footer" />
	</definition>
	<definition name="userslist" extends=".tile.mainLayout">
		<put-attribute name="body" value=".tile.body.userList" />
	</definition>
	<definition name="registration" extends=".tile.mainLayout">
		<put-attribute name="body" value=".tile.body.registration" />
	</definition>
	
